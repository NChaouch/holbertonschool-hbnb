                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"title\": \"Beautiful Apartment\",\n    \"description\": \"A lovely apartment in the heart of the city\",\n    \"price\": 150.00,\n    \"latitude\": 48.8566,\n    \"longitude\": 2.3522,\n    \"owner_id\": \"{{userId}}\",\n    \"amenities\": []\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/places",
                            "host": ["{{baseUrl}}"],
                            "path": ["places"]
                        }
